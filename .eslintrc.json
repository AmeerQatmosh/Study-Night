{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "mocha": true
  },
  "extends": ["eslint:recommended", "plugin:cypress/recommended", "prettier"],
  "plugins": ["cypress"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-var": "error",
    "no-unused-vars": "warn",
    "semi": ["error", "always"],
    "eqeqeq": "error",
    "quotes": ["error", "double"],
    "indent": ["error", 2]
  },
  "globals": {
    "cy": "readonly",
    "Cypress": "readonly",
    "describe": "readonly",
    "it": "readonly",
    "beforeEach": "readonly"
  }
}
